{
  "name": "lukecod.es",
  "description": "Luke's code blog.",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/lukekarrys/lukecod.es/issues"
  },
  "devDependencies": {
    "git-directory-deploy": "^1.0.0",
    "json": "^9.0.4"
  },
  "engines": {
    "node": "^6.1.0",
    "ruby": "2.1.1"
  },
  "homepage": "http://lukecod.es",
  "main": "README.md",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/lukekarrys/lukecod.es.git"
  },
  "scripts": {
    "build": "jekyll build",
    "codeship-setup": "npm run ruby-version && bundle install && npm install && npm run build",
    "deploy": "git-directory-deploy --directory _site --branch gh-pages --username lukekarrys --email lukekarrys@gmail.com --repo git@github.com:lukekarrys/lukecod.es.git --message='--skip-ci'",
    "ruby-version": "rvm use `cat package.json | json engines.ruby` --install",
    "start": "jekyll serve --watch"
  }
}
