{
  "name": "lukecod.es",
  "description": "Luke's code blog.",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/lukekarrys/lukecod.es/issues"
  },
  "devDependencies": {
    "git-directory-deploy": "^1.0.0"
  },
  "engines": {
    "node": "^5.1.0",
    "npm": "^3.3.12",
    "ruby": "2.1.1"
  },
  "homepage": "http://lukecod.es",
  "main": "README.md",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/lukekarrys/lukecod.es.git"
  },
  "scripts": {
    "build": "jekyll build",
    "codeship-setup": "npm run ruby-version && bundle install && npm run npm-version && npm install && npm run build",
    "deploy": "git-directory-deploy --directory _site --branch gh-pages --username lukekarrys --email lukekarrys@gmail.com --repo git@github.com:lukekarrys/lukelov.es.git --message='--skip-ci'",
    "npm-version": "npm install -g npm@`cat package.json | jq -r '.engines.npm'`",
    "ruby-version": "nrvm use `cat package.json | jq -r '.engines.ruby'` --install",
    "start": "jekyll serve --watch"
  }
}
